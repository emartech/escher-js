{
  "name": "@emartech/escher",
  "description": "Library for HTTP request signing (JavaScript implementation)",
  "version": "3.2.4",
  "homepage": "https://github.com/emartech/escher-js",
  "author": {
    "name": "Emarsys Technologies"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/emartech/escher-js.git"
  },
  "bugs": {
    "url": "https://github.com/emartech/escher-js/issues"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/emartech/escher-js/blob/master/LICENSE"
    }
  ],
  "main": "dist/escher",
  "engines": {
    "node": ">= 14"
  },
  "scripts": {
    "build": "rm -rf dist && tsc --project ./tsconfig.json",
    "test": "npm run code-style && npm run lint && npm run test:tape",
    "test:tape": "tape spec/tape-tests.spec.js --require ts-node/register | faucet",
    "prettier": "prettier --write src/**/*.js spec/**/*.js",
    "lint": "eslint src/**/*.js spec/**/*.js",
    "code-style": "prettier --check src/**/*.js spec/**/*.js"
  },
  "keywords": [
    "escher",
    "js",
    "hmac",
    "sha",
    "aws",
    "signature",
    "http",
    "request",
    "rest",
    "authentication",
    "api"
  ],
  "devDependencies": {
    "@types/dateformat": "^5.0.0",
    "@types/is-number": "^7.0.3",
    "@types/is-string": "^1.0.0",
    "@types/node": "^18.7.16",
    "eslint": "^5.16.0",
    "eslint-config-emarsys": "^5.1.0",
    "eslint-plugin-security": "^1.4.0",
    "faucet": "0.0.1",
    "prettier": "^1.17.1",
    "ramda": "^0.26.1",
    "recursive-readdir": "^2.2.2",
    "sinon": "^7.3.2",
    "tape": "^4.10.1",
    "ts-node": "10.9.1",
    "typescript": "4.8.2"
  },
  "dependencies": {
    "dateformat": "4.6.3",
    "is-number": "7.0.0",
    "is-string": "1.0.7"
  }
}
